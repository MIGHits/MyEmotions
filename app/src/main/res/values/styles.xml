        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="addButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">80dp</item>
    </style>

    <style name="navigationBarText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/vela_sans_medium</item>
        <item name="android:lineHeight">16sp</item>
    </style>

    <style name="navigationBarTextActive">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/vela_sans_medium</item>
        <item name="android:lineHeight">16sp</item>
    </style>

    <style name="activeIndicator" parent="Widget.Material3.NavigationRailView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <style name="CustomSwitchMaterial" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="switchMinWidth">52dp</item>
        <item name="minHeight">32dp</item>

    </style>

    <style name="CustomTimePickerDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/navbarBackground</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:buttonBarButtonStyle">@style/CustomPositiveButtonStyle</item>
    </style>

    <style name="CustomPositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/navbarBackground</item>
    </style>

    <style name="CustomNegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="textBackground">@color/navbarBackground</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="AvatarCircle" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">50%</item>
    </style>
